{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "types": ["node"]  // ← On retire "cypress" ici pour le build principal
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "cypress",
    "jest-tests",                // ← Exclut les tests Jest (cause du conflit)
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.cy.ts"
  ]
}