{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "types": ["node", "cypress"]   // ✅ Ajout de Cypress
  },
  "include": [
    "**/*.ts",
    "**/*.js",
    "cypress/**/*.ts"              // ✅ Inclure les tests Cypress
  ],
  "exclude": ["node_modules", "dist"]
}
